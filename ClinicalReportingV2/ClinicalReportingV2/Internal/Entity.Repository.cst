       Task<<%=Entity.ClassName%>> Add<%=Entity.ClassName%>Async(<%=Entity.ClassName%> <%=Entity.ClassName.ToLower()%>);
       Task<List< <%=Entity.ClassName %>>> GetAll<%=Entity.ClassName%>Async();
